# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=dnb-presentation-generator-rg

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_MODEL_NAME=gpt-4o

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dnb_presentations
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://presentations.dnb.no
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Application Configuration
APP_NAME=DNB Presentation Generator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.md
UPLOAD_DIRECTORY=./uploads

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=dnbpresentations
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string

# Presentation Configuration
MAX_SLIDES_PER_PRESENTATION=25
DEFAULT_TEMPLATE=corporate
CHART_GENERATION_ENABLED=true
IMAGE_SEARCH_ENABLED=true

# Compliance Configuration
PII_DETECTION_ENABLED=true
CONTENT_SAFETY_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for banking compliance

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ADVANCED_CHARTS=true
ENABLE_AI_SUGGESTIONS=true
ENABLE_COLLABORATIVE_EDITING=false

# External Services
CORPORATE_ASSET_API_URL=https://assets.dnb.no/api/v1
KNOWLEDGE_BASE_API_URL=https://knowledge.dnb.no/api/v1
DLP_SERVICE_URL=https://dlp.dnb.no/api/v1

# Email Configuration (for notifications)
SMTP_HOST=smtp.dnb.no
SMTP_PORT=587
SMTP_USERNAME=presentations@dnb.no
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
